{% extends 'base.html.twig' %}

{% block title %}Se connecter {% endblock %}

{% block body %}

    <section class="login-section">

        <div class="bg-4">
            <img class="login-img " src="{{ asset('images/branche.jpg') }}" alt="">
        </div>

        <div class="login-form">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <h1 class="login-h1">Connexion</h1>
                <label for="username">Adresse email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                <button class="base-button button-login" type="submit">
                    <a href="{{ path('app_login') }}">Se connecter</a>
                </button>
            </form>

            <a class="accountless" href="{{ path('app_register') }}">Pas encore de compte ? S'inscrire</a>
        </div>

    </section>
{% endblock %}
